<% layout('layouts/boilerplate') %> 
<div id="cluster-map"></div>
    <div class="container px-5">
        <h1 class="text-center mt-4">All Restaurants</h1>
        <div class="mb-3">
            <% for(let restaurant of restaurants){ %>
                <div class="container">
                    <div class="card mb-3">
                        <div class="row">
                            <div class="col-md-4">
                                <% if(restaurant.images.length){ %> 
                                <img src="<%= restaurant.images[0].url %>" class="img-fluid" alt="">
                                <% } else{ %>
                                    <img src="https://res.cloudinary.com/rishabhbafna/image/upload/v1609938479/HungerMania/600px-No_image_available.svg_xoy18q.png" class="img-fluid" alt=""> 
                                <% } %> 
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= restaurant.title %> </h5>
                                    <p class="card-text"><%= restaurant.description %></p>
                                    <p class="card-text">
                                        <small class="text-muted"><%= restaurant.location %> </small>
                                    </p>
                                    <a class="btn btn-primary" href="/restaurants/<%= restaurant._id %> ">Show Details</a>
                                </div>
                            </div>
                        </div>
                    </div> 
                </div>
                <% } %> 
        </div>
    </div>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const restaurants = { features : <%- JSON.stringify(restaurants)  %>}
    </script>
    
<script src="/javascripts/indexPageMap.js" ></script>
